#include<iostream>
using namespace std;

int main()
{
   int arr[5];
   cout<<"Enter the elements of the array:"<<endl;
   
   for(int i=0; i<5 ; i++){
       cin>>arr[i];
   }
   
   int *ptr = &arr[0];
   cout<<"The values in the array are: ";
   for(int i = 0; i < 5; i++) {
      cout<< *(ptr+i) <<" ";
     
   }
  
    return 0;
}
